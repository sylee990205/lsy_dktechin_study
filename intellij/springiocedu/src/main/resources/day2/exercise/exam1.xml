	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="morningGreet" class="day2.exercise.exam1.MorningGreetingImpl" />
	<bean id="afternoonGreet" class="day2.exercise.exam1.AfternoonGreetingImpl" />
